<%= form_with model: kitten do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age %><br>
    <%= form.text_field :age %>
  </div>

  <div>
    <%= form.label :cuteness %><br>
    <%= form.text_field :cuteness, placeholder: "low, mid, high" %>
  </div>

  <div>
    <%= form.label :softness %><br>
    <%= form.text_field :softness, placeholder: "low, mid, high" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% if kitten.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kitten.errors.count, "error") %> prohibited this kitten from being:</h2>

      <ul>
      <% kitten.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>